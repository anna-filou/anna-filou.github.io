{% endcomment %}<div class="container" id="work">
  <hr>
  <h2 class="ttu">{{ data.work.title[page.lang] }}</h2>
  <div class="measure">
    {{ data.work.text[page.lang] | markdownify }}
  </div>
</div>



<section class="work-grid ph3-ns ph2 pt5">
  {% for grid-item in site.data.work-grid %}

    {% if grid-item.link.url %}
      <a
        href="{{ grid-item.link.url }}"
        class="flex flex-column justify-between pa3 bg-faint br3 grow-small no-underline"
        {% if grid-item.link.url contains 'http' %}target="_BLANK"{% endif %}>
      {% else %}
        <div class="flex flex-column justify-between pa3 bg-faint br3">
        {% endif %}
        <div class="flex justify-between mb1">
          <h3 class="f3 f4-ns ma0 ttn mr2">{{ grid-item.title[page.lang] }}</h3>
          <div class="">{{ grid-item.link.title }}</div>
        </div>
        <div class="secondary fw4">{{ grid-item.desc[page.lang] }}</div>
        <div class="db aspect-ratio aspect-ratio--4x3 mv3">
          <span
            role="img"
            aria-label=""
            style="background-image:url({{grid-item.img}});"
            class="bg-center cover aspect-ratio--object br2"></span>
        </div>
        <div class="flex justify-between">
          <div>
            {% for tag in grid-item.tags %}
              <div class="tracked tag tag-{{tag.color}} mb1 mr1">{{ tag.name }}</div>
            {% endfor %}
          </div>
          {% if grid-item.year %}
            <div class="fw3 white secondary">{{ grid-item.year }}</div>
          {% endif %}
        </div>
        {% if grid-item.link.url %}
        </a>
    {% else %}
      </div>
    {% endif %}
  {% endfor %}

</section>