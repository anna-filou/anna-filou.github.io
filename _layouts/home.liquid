      <div class="scroll-container flex flex-column flex-row-ns overflow-x-auto-ns pv3 pl3-ns bg-faint br3 gap3">
        <div class="flex-shrink-0 measure-narrow-ns pa3 pa2-ns pr3-ns">
          <h3 class="f3 f4-ns ma0 ttn">{{ project.title }}</h3>
          <p class="f5 mt2 secondary">{{ project.year }} | {{ project.skills }}</p>
          <div class="f5 lh-copy">{{ project.description | markdownify }}</div>
          <div class="mt4">
            {% if project.case_study %}
              <a href="{{ project.case_study.url }}" class="f5 br3 ph3 pv2 dib ba bw1 b--faint bg-faint mr2">{{ project.case_study.title }}</a>
            {% endif %}
            {% if project.live_site %}
              <a href="{{ project.live_site.url }}" target="_BLANK" class="f5 br3 ph3 pv2 dib ba bw1 b--faint">{{ project.live_site.title }}</a>
            {% endif %}
          </div>
        </div>
        <div class="flex-shrink-0 overflow-x-auto project-images flex pl3 pl0-ns" style="height: 400px;">
          {% for image in project.images %}
            <img draggable="false" style="min-width: fit-content;" height="100%" width="auto" class="br3 {% if forloop.last == false %}mr3{% endif %}" src="{{ image }}" alt="{{ project.title }} - Image {{ forloop.index }}">
          {% endfor %}
        </div>
      </div>
      <!-- Scroll control overlay = SIBLING of scroll-container because if it’s INSIDE it scrolls WITH it! -->
      <div class="scroll-overlay absolute top-0 left-0 right-0 bottom-0 flex">
        <div class="scroll-left"></div>
        <div class="scroll-right"></div>
      </div>
    </div>
  {% endfor %}
</section>




