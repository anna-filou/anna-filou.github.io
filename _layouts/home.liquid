        </div>
        <div class="f5 secondary fw4">{{ grid-item.desc[page.lang] }}</div>
        <div class="db aspect-ratio aspect-ratio--4x3 mv3">
          <span
            role="img"
            aria-label=""
            style="background-image:url({{grid-item.img}});"
            class="bg-center cover aspect-ratio--object br2"></span>
        </div>
        <div class="flex justify-between">
          <div>
            {% for tag in grid-item.tags %}
              <div class="tracked tag tag-{{tag.color}} mb1 mr1">{{ tag.name }}</div>
            {% endfor %}
          </div>
          {% if grid-item.year %}
